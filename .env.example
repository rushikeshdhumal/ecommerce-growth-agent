# E-commerce Growth Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
# Get your API key from: https://platform.openai.com/api-keys

# Anthropic API Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# Get your API key from: https://console.anthropic.com/

# Model Selection (gpt-4, gpt-3.5-turbo, claude-3-opus)
AGENT_MODEL=gpt-4

# Model Parameters
TEMPERATURE=0.7
MAX_TOKENS=4096

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Agent Behavior Settings
MAX_ITERATIONS=10
MIN_ROAS_THRESHOLD=2.0
MAX_DAILY_BUDGET=1000.0
MIN_CAMPAIGN_BUDGET=100.0

# Safety Guardrails
MAX_FREQUENCY_CAP=3
MIN_AUDIENCE_SIZE=1000

# =============================================================================
# DATA CONFIGURATION
# =============================================================================

# Sample Data Generation
SAMPLE_DATA_SIZE=10000
CUSTOMER_SEGMENT_COUNT=5

# Database Configuration
DATABASE_URL=sqlite:///data/ecommerce_agent.db

# =============================================================================
# PERFORMANCE THRESHOLDS
# =============================================================================

# Minimum Performance Thresholds
MIN_CTR=0.01
MIN_CONVERSION_RATE=0.02
MAX_CAC=500.0
MIN_CUSTOMER_LTV=100.0
MAX_CHURN_RISK=0.8

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
LOG_FILE=logs/agent.log

# =============================================================================
# PLATFORM API KEYS (Optional - for real integrations)
# =============================================================================

# Google Ads API
# GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token_here
# GOOGLE_ADS_CLIENT_ID=your_client_id_here
# GOOGLE_ADS_CLIENT_SECRET=your_client_secret_here
# GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token_here
# GOOGLE_ADS_CUSTOMER_ID=your_customer_id_here

# Meta Ads API
# META_ADS_APP_ID=your_app_id_here
# META_ADS_APP_SECRET=your_app_secret_here
# META_ADS_ACCESS_TOKEN=your_access_token_here
# META_ADS_AD_ACCOUNT_ID=your_ad_account_id_here

# Klaviyo API
# KLAVIYO_API_KEY=your_klaviyo_api_key_here
# KLAVIYO_PUBLIC_API_KEY=your_public_key_here

# Shopify API
# SHOPIFY_SHOP_URL=your-shop.myshopify.com
# SHOPIFY_ACCESS_TOKEN=your_access_token_here
# SHOPIFY_API_VERSION=2023-10

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================

# Streamlit Settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_THEME_BASE=light

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug Mode
DEBUG=true

# Enable Mock APIs (true/false)
USE_MOCK_APIS=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Session Configuration
SESSION_SECRET_KEY=your_session_secret_key_here

# Rate Limiting
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=3600

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Enable Performance Monitoring
ENABLE_MONITORING=true

# Analytics Configuration
# GOOGLE_ANALYTICS_ID=your_ga_id_here
# MIXPANEL_TOKEN=your_mixpanel_token_here

# Error Tracking
# SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Email Notifications
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFICATION_EMAIL=alerts@yourcompany.com

# Slack Notifications
# SLACK_WEBHOOK_URL=your_slack_webhook_url_here
# SLACK_CHANNEL=#marketing-alerts

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Custom Model Endpoints (for self-hosted models)
# CUSTOM_LLM_ENDPOINT=http://localhost:8000/v1/chat/completions
# CUSTOM_LLM_API_KEY=your_custom_api_key

# Feature Flags
ENABLE_AB_TESTING=true
ENABLE_ADVANCED_SEGMENTATION=true
ENABLE_PREDICTIVE_ANALYTICS=false
ENABLE_REAL_TIME_OPTIMIZATION=true

# Cache Configuration
ENABLE_CACHING=true
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit this file with real API keys to version control
# 2. Keep your API keys secure and rotate them regularly
# 3. Use environment-specific .env files for different deployments
# 4. Some features require paid API access (OpenAI, Anthropic)
# 5. Mock APIs are enabled by default for demonstration purposes